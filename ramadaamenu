        { tr: "Etli Noodle", en: "Beef Noodles", price: "700 TRY" },
      ],
    },
  };

  let currentLang = "tr";

  function renderMenu() {
    const container = document.getElementById("menu");
    container.innerHTML = "";
    for (const cat in menuData) {
      let section = document.createElement("section");
      section.innerHTML = `<h2>${menuData[cat].title[currentLang]}</h2>`;
      menuData[cat].items.forEach((i) => {
        section.innerHTML += `
          <div class="item">
            <span>${i[currentLang]}</span>
            <span class="price">${i.price}</span>
          </div>`;
      });
      container.appendChild(section);
    }
  }

  function setLang(lang) {
    currentLang = lang;
    renderMenu();
  }

  renderMenu();
</script>

